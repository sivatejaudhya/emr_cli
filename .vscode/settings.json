{
    // Enable linting
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,

    // Point to your .pylintrc file in the project root
    "python.linting.pylintArgs": ["--rcfile=${Lightweight_EMR_CLI}/.pylintrc"],

    // Make sure VSCode uses your virtual environment
    "python.pythonPath": "${Lightweight_EMR_CLI}/.venv/Scripts/python.exe", // Windows
    // "python.pythonPath": "${Lightweight_EMR_CLI}/.venv/bin/python", // Mac/Linux

    // Disable other linters to avoid conflicts
    "python.linting.flake8Enabled": false,
    "python.analysis.typeCheckingMode": "off"
}

